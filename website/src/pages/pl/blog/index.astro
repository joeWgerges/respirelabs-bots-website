---
import Layout from '../../../layouts/Layout.astro';
import Button from '../../../components/ui/Button.astro';

const postModules = import.meta.glob('./*.md', { eager: true });
const posts = Object.values(postModules) as any[];

// Sort posts by date descending (newest first)
posts.sort((a, b) => {
  const dateA = new Date(a.frontmatter.date || '1970-01-01');
  const dateB = new Date(b.frontmatter.date || '1970-01-01');
  return dateB.getTime() - dateA.getTime();
});

const frontmatter = {
  title: 'Blog â€“ Oddychanie, sen i nawyki | RespireLabs',
  description: 'Artykuly o oddychaniu, snie i nawykach.',
  lang: 'pl'
};

function formatDate(dateStr: string) {
  if (!dateStr) return '';
  const date = new Date(dateStr + 'T00:00:00');
  return date.toLocaleDateString('pl-PL', { month: 'short', day: 'numeric', year: 'numeric' });
}
---

<Layout frontmatter={frontmatter}>
  <!-- HERO SECTION -->
  <section class="relative bg-[#F5F5F7] min-h-[50vh] flex flex-col items-center justify-center overflow-hidden pt-24 pb-16 border-b border-black/[0.05]">
    <div class="absolute inset-0 bg-grid-pattern opacity-30 pointer-events-none"></div>
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center reveal hero-reveal flex flex-col items-center">
      <div class="inline-flex items-center space-x-2 bg-white px-5 py-2 rounded-full mb-8 shadow-sm border border-brand-light">
        <span class="text-xs font-montserrat font-bold tracking-widest uppercase text-brand-dark/80">Zasoby</span>
      </div>

      <h1 class="text-5xl sm:text-6xl md:text-7xl font-oddval font-bold text-brand-dark tracking-tighter mb-6 leading-[0.9] drop-shadow-sm">
        RespireLabs <br/>
        <span class="text-gradient">Blog.</span>
      </h1>

      <p class="mt-4 max-w-2xl mx-auto text-xl font-montserrat font-light text-brand-grey leading-relaxed reveal hero-reveal delay-100">
        Praktyczne artykuly o oddychaniu, nauce o snie i budowaniu zdrowszych nawykow.
      </p>
    </div>
  </section>

  <!-- BLOG FEED -->
  <section class="py-24 bg-brand-white relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {posts.map((post, index) => (
          <article class="group reveal" style={`animation-delay: ${index * 100}ms`}>
            <a href={post.url} class="block h-full bg-white rounded-[2rem] border border-black/[0.03] shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-300 overflow-hidden focus-ring">
              <!-- Abstract Cover -->
              <div class="h-48 w-full bg-[#F5F5F7] relative overflow-hidden flex items-center justify-center border-b border-black/[0.02]">
                <div class="absolute inset-0 bg-grid-pattern opacity-20 pointer-events-none"></div>
                <div class="absolute -top-10 -right-10 w-32 h-32 bg-brand-blue/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
                <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-brand-yellow/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
                <svg class="w-12 h-12 text-brand-dark/20 group-hover:text-brand-blue/40 transition-colors duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>

              <div class="p-8 flex flex-col flex-grow">
                <!-- Meta row: date, read time, category -->
                <div class="flex items-center gap-3 mb-4 flex-wrap">
                  {post.frontmatter.date && (
                    <time datetime={post.frontmatter.date} class="text-xs font-montserrat font-medium text-brand-grey">
                      {formatDate(post.frontmatter.date)}
                    </time>
                  )}
                  {post.frontmatter.date && post.frontmatter.readTime && (
                    <span class="text-brand-light" aria-hidden="true">&middot;</span>
                  )}
                  {post.frontmatter.readTime && (
                    <span class="inline-flex items-center gap-1 text-xs font-montserrat font-medium text-brand-grey">
                      <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                        <circle cx="12" cy="12" r="10" />
                        <polyline points="12 6 12 12 16 14" />
                      </svg>
                      {post.frontmatter.readTime}
                    </span>
                  )}
                  <span class="ml-auto inline-flex items-center px-3 py-1 rounded-full bg-brand-blue/[0.06] text-brand-blue text-[10px] font-montserrat font-bold uppercase tracking-widest">
                    Oddychanie
                  </span>
                </div>

                <!-- Title -->
                <h2 class="text-xl font-oddval font-bold text-brand-dark mb-3 leading-tight group-hover:text-brand-blue transition-colors duration-300">
                  {post.frontmatter.title}
                </h2>

                <!-- Description -->
                <p class="text-brand-grey font-garamond text-base leading-relaxed mb-6 line-clamp-3 flex-grow">
                  {post.frontmatter.description}
                </p>

                <!-- Footer -->
                <div class="pt-4 border-t border-brand-light/50 flex items-center justify-between mt-auto">
                  <span class="text-brand-dark font-montserrat font-semibold text-xs uppercase tracking-widest group-hover:text-brand-blue transition-colors duration-300">Czytaj artykul</span>
                  <span class="text-brand-blue transform group-hover:translate-x-1 transition-transform duration-300">&rarr;</span>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- NEWSLETTER -->
  <section class="py-24 bg-brand-dark text-white text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-grid-pattern-dark opacity-10 pointer-events-none"></div>
    <div class="relative z-10 max-w-3xl mx-auto px-4 reveal">
      <h2 class="text-4xl md:text-5xl font-oddval font-bold mb-6">Badz na biezaco.</h2>
      <p class="text-lg md:text-xl font-montserrat font-light text-brand-light/70 mb-10">
        Otrzymuj najnowsze artykuly o snie i oddychaniu bezposrednio na swoja skrzynke.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4 max-w-md mx-auto">
          <Button href="/pl/lista-oczekujacych" variant="primary" class="w-full bg-white text-brand-dark hover:bg-brand-light border-transparent shadow-[0_0_30px_rgba(255,255,255,0.1)] hover:scale-[1.03]">Dolacz do listy oczekujacych</Button>
      </div>
    </div>
  </section>
</Layout>
