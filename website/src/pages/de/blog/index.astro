---
import Layout from '../../../layouts/Layout.astro';
import Button from '../../../components/ui/Button.astro';

// Use import.meta.glob to load markdown files in modern Astro
const posts = await Astro.glob('./*.md');

const frontmatter = {
  title: 'Blog | RespireLabs',
  description: 'Artikel 端ber Atmung, Schlaf und Gewohnheiten.',
  lang: 'de'
};
---

<Layout frontmatter={frontmatter}>
  <!-- HERO SECTION -->
  <section class="relative bg-[#F5F5F7] min-h-[50vh] flex flex-col items-center justify-center overflow-hidden pt-24 pb-16 border-b border-black/[0.05]">
    <div class="absolute inset-0 bg-grid-pattern opacity-30 pointer-events-none"></div>
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center reveal hero-reveal flex flex-col items-center">
      <div class="inline-flex items-center space-x-2 bg-white px-5 py-2 rounded-full mb-8 shadow-sm border border-brand-light">
        <span class="text-xs font-montserrat font-bold tracking-widest uppercase text-brand-dark/80">Ressourcen</span>
      </div>
      
      <h1 class="text-5xl sm:text-6xl md:text-7xl font-oddval font-bold text-brand-dark tracking-tighter mb-6 leading-[0.9] drop-shadow-sm">
        RespireLabs <br/>
        <span class="text-gradient">Blog.</span>
      </h1>
      
      <p class="mt-4 max-w-2xl mx-auto text-xl font-montserrat font-light text-brand-grey leading-relaxed reveal hero-reveal delay-100">
        Praktische Artikel 端ber Atmung, Schlafforschung und den Aufbau ges端nderer Gewohnheiten.
      </p>
    </div>
  </section>

  <!-- BLOG FEED -->
  <section class="py-24 bg-brand-white relative">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post, index) => (
          <article class={`group bg-white rounded-3xl border border-black/[0.04] shadow-sm hover:shadow-[0_8px_30px_rgb(0,0,0,0.08)] overflow-hidden transition-all duration-500 reveal delay-${(index % 3) * 100}`}>
            <a href={post.url} class="block h-full flex flex-col focus-ring rounded-3xl">
                <!-- Abstract Cover Image Replacement -->
                <div class="h-48 w-full bg-[#F5F5F7] relative overflow-hidden flex items-center justify-center border-b border-black/[0.02]">
                    <div class="absolute inset-0 bg-grid-pattern opacity-20 pointer-events-none"></div>
                    <div class="absolute -top-10 -right-10 w-32 h-32 bg-brand-blue/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
                    <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-brand-yellow/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
                    <svg class="w-12 h-12 text-brand-dark/20 group-hover:text-brand-blue/40 transition-colors duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                </div>
                
                <div class="p-8 flex flex-col flex-grow">
                    <h2 class="text-2xl font-oddval font-bold text-brand-dark mb-4 leading-tight group-hover:text-brand-blue transition-colors">
                        {post.frontmatter.title}
                    </h2>
                    <p class="text-brand-grey font-montserrat font-light text-sm leading-relaxed mb-6 line-clamp-3 flex-grow">
                        {post.frontmatter.description}
                    </p>
                    <div class="pt-4 border-t border-brand-light/50 flex items-center justify-between mt-auto">
                        <span class="text-brand-dark font-montserrat font-semibold text-xs uppercase tracking-widest">Artikel lesen</span>
                        <span class="text-brand-blue transform group-hover:translate-x-1 transition-transform">&rarr;</span>
                    </div>
                </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
  
  <!-- NEWSLETTER -->
  <section class="py-24 bg-brand-dark text-white text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-grid-pattern-dark opacity-10 pointer-events-none"></div>
    <div class="relative z-10 max-w-3xl mx-auto px-4 reveal">
      <h2 class="text-4xl md:text-5xl font-oddval font-bold mb-6">Auf dem Laufenden bleiben.</h2>
      <p class="text-lg md:text-xl font-montserrat font-light text-brand-light/70 mb-10">
        Erhalte die neuesten Artikel 端ber Schlaf und Atmung direkt in dein Postfach.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4 max-w-md mx-auto">
          <Button href="/de/waitlist" variant="primary" class="w-full bg-white text-brand-dark hover:bg-brand-light border-transparent shadow-[0_0_30px_rgba(255,255,255,0.1)] hover:scale-[1.03]">Warteliste beitreten</Button>
      </div>
    </div>
  </section>
</Layout>