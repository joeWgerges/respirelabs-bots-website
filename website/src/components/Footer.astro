---
const { lang } = Astro.props;

const currentYear = new Date().getFullYear();

const footerLinks = {
  en: {
    links: [
      { label: 'Press', href: '/en/press' },
      { label: 'Privacy', href: '/en/privacy' },
      { label: 'Terms', href: '/en/terms' },
      { label: 'Cookies', href: '/en/cookies' },
      { label: 'Data deletion', href: '/en/data-deletion' }
    ],
    contact: 'Contact',
    disclaimerTitle: 'Medical disclaimer',
    disclaimerText: 'RespireLabs is a wellness product. It does not diagnose, treat, cure, or prevent any disease.',
  },
  de: {
    links: [
      { label: 'Presse', href: '/de/press' },
      { label: 'Datenschutz', href: '/de/datenschutz' },
      { label: 'AGB', href: '/de/terms' },
      { label: 'Cookies', href: '/de/cookies' },
      { label: 'Datenl√∂schung', href: '/de/data-deletion' }
    ],
    contact: 'Kontakt',
    disclaimerTitle: 'Medizinischer Hinweis',
    disclaimerText: 'RespireLabs ist ein Wellness-Produkt. Es stellt keine Diagnose und ersetzt keine medizinische Beratung.',
  }
};

const content = footerLinks[lang as keyof typeof footerLinks] || footerLinks.en;
---

<footer class="bg-brand-dark text-brand-white pt-16 pb-8 border-t border-brand-grey/20 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
      <!-- Brand & Info -->
      <div class="md:col-span-1 flex flex-col space-y-4">
        <a href={`/${lang}`} class="flex items-center space-x-2 mb-4">
           <!-- Using white logo -->
          <img class="h-10 w-auto" src="/assets/logo/respire-labs-logo_white-on-colour-logo.png" alt="RespireLabs Logo" />
        </a>
        <p class="text-sm font-montserrat text-brand-light">RespireLabs &copy; {currentYear}</p>
        <p class="text-sm font-montserrat text-brand-light mt-2">
          <strong>{content.contact}:</strong> <a href="mailto:support@respirelabs.com" class="hover:text-brand-yellow transition-colors">support@respirelabs.com</a>
        </p>
      </div>

      <!-- Links -->
      <div class="md:col-span-1">
        <h4 class="font-oddval text-lg mb-4 text-brand-yellow">{lang === 'de' ? 'Rechtliches' : 'Legal'}</h4>
        <ul class="space-y-2">
          {content.links.map((link) => (
            <li>
              <a href={link.href} class="text-brand-light hover:text-brand-yellow font-montserrat text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Medical Disclaimer -->
      <div class="md:col-span-2 bg-white/5 p-6 rounded-xl border border-brand-grey/30">
        <div class="flex items-start space-x-3">
          <svg class="h-6 w-6 text-brand-yellow flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <h4 class="font-oddval text-base mb-2 text-brand-yellow">{content.disclaimerTitle}</h4>
            <p class="text-sm font-montserrat text-brand-light leading-relaxed">
              {content.disclaimerText}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>